{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area":"header",
			"name":"header-centered-nav-cta",
			"title":"Header With Nav and Main CTA"
		},
		{
			"area":"uncategorized",
			"name":"loop-with-cover",
			"title":"Loop with cover"
		}
	],
	"settings": {
		"blocks": [],
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true,
			"customRadius": true
		},
		"appearanceTools": true,
		"color": {
			"custom": true,
			"customGradient": true,
			"link": true,
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#24ffff"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#24abff"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#d51aff"
				}
			],
			"duotone": [
				{
					"name": "Duetone #1",
					"slug": "duetone-1",
					"colors": [
						"#24ffff",
						"#24abff"
					]
				},
				{
					"name": "Duetone #2",
					"slug": "duetone-2",
					"colors": [
						"#24ffff",
						"#d51aff"
					]
				},
				{
					"name": "Duetone #3",
					"slug": "duetone-3",
					"colors": [
						"#24abff",
						"#d51aff"
					]
				}
			],
			"gradients": [
				{
					"name": "Primary Gradient",
					"slug": "primary-gradient",
					"gradient": "linear-gradient(135deg, #24ffff 0%, #24abff 100%)"
				},
				{
					"name": "Secondary Gradient",
					"slug": "secondary-gradient",
					"gradient": "linear-gradient(135deg, #24ffff 0%, #d51aff 100%)"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"customLineHeight": true,
			"dropCaps": true,
			"fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "13"
				},
				{
					"name": "Normal",
					"slug": "normal",
					"size": "16"
				},
				{
					"name": "Big",
					"slug": "big",
					"size": "22"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "Bitter",
					"slug": "bitter",
					"fontFace": [
						{
							"fontFamily": "Bitter",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/bitter_normal_300.ttf"
							]
						},
						{
							"fontFamily": "Bitter",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/bitter_normal_400.ttf"
							]
						},
						{
							"fontFamily": "Bitter",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/bitter_normal_600.ttf"
							]
						}
					]
				}
			]
		},
		"spacing": [
			{
				"padding": true,
				"margin": true,
				"units": [
					"px",
					"em",
					"rem",
					"vh",
					"vw"
				]
			}
		],
		"layout": {
			"contentSize": "640px",
			"wideSize": "1280px"
		}
	},
	"styles": {
		"color": {
			"background": "#1d1d1d",
			"text": "#fefefe"
		},
		"elements": {
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"link": {
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)",
						"textDecoration":"underline"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)"
				}
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--bitter)",
			"lineHeight": "1.6",
			"fontStyle": "normal",
			"fontWeight": "400"
		},
		"blocks": {
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/query-title": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--40)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			}
		},
		"css": ".main-h1 {\nposition:relative;\npadding:140px;\n}\n\n.main-h1:before {\n    position: absolute;\n    content: \"\";\n    z-index: -1;\n    top: 0%;\n    bottom: 10%;\n    width: 150%;\n    left: -25%;\n    background: url(/assets/noise.webp) repeat,linear-gradient(83.21deg,var(--wp--preset--color--primary) 0%,var(--wp--preset--color--tertiary) 100%);\n    background-blend-mode: overlay;\n    -webkit-mask-image: radial-gradient(rgba(0,0,0,.5),transparent 70%);\n    mask-image: radial-gradient(rgba(0,0,0,.5),transparent 70%);\n}\n body {background: url(https://grainy-gradients.vercel.app/noise.svg) repeat, var(--wp--preset--color--background);background-blend-mode: overlay;}",
		"spacing": {
			"padding": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			}
		}
	},
	"customTemplates": [
		{
			"name": "blank-canvas",
			"title": "Blank Canvas",
			"postTypes": [ "page" ]
		},
		{
			"name": "page-no-title",
			"title": "No Title",
			"postTypes": [ "page" ]
		}
	]
	
}